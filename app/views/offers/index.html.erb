<h1>Offers</h1>

<%= will_paginate @offers %>

<ul>
  <% @offers.each do |offer| %>
    <li>
      <a href="<%= offer_path(offer) %>">
        <div><strong><%= offer.title %></strong> at <%= offer.company.name %></div>
        <div class="offer"><%= t "offers.modes.#{offer.mode}" %></div>
      </a>
    </li>
    <br>
  <% end %>
</ul>