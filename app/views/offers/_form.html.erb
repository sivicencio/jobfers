<%= simple_form_for @offer do |f| %>
  <%= f.input :title %>
  <%= f.input :mode, collection: Offer.modes.keys.map {|mode| [t(mode), mode]} %>
  <%= f.input :salary %>
  <%= f.input :description %>
  <%= f.association :company %>
  <%= f.association :skills, as: :check_boxes %>
  <%= f.button :submit %>
<% end %>